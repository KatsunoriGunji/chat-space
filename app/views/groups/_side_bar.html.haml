.top-bar
  .top-bar__username
    = current_user.name
  =link_to new_group_path, class: "top-bar__button", data: {"turbolinks" => false} do
    =fa_icon 'edit'
  =link_to edit_user_path(current_user), class: "top-bar__button--right" do
    =fa_icon 'cog'
.main-bar
  - current_user.groups.each do |group|
    = link_to group_messages_path(group), class: "main-bar__group", data: {"turbolinks" => false} do
      .group-name
        = group.name
      .comment
        = group.show_last_message